#include<iostream>
using namespace std;

class complex{
	int a,b;
	
	public:
		void get_data(){
			cout<<"Enter the value of real part of complex number: ";
			cin>>a;
			cout<<"Enter the value of imaginary part of complex number: ";
			cin>>b;
			cout<<"*********************************************************"<<endl;
		}
		
		
		
		complex operator == (complex ob){
			complex t;
			t.a = a + ob.a;
			t.b = b + ob.b;
			return (t);
		}
		
		void display(){
			cout<<a<<" + "<<b<<"i"<<endl;
		}
};

int main(){
	complex obj1, obj2, result;
	
	obj1.get_data();                               
	obj2.get_data();
	
	result = obj1+obj2;
	
	result.display();
	return 0;
}
